<% posts.each do |post| %>
  <div class='card mb-2'>
    <div class='card-body'>
      <h5 class='card-title'><%= link_to post.title, post %></h5>
      <h6 class='card-subtitle mb-2 text-muted' title="<%= post.created_at.strftime('%d/%m/%y %H:%M:%S') %>">
        <%= time_ago_in_words(post.created_at) %>
      </h6>
    </div>
  </div>
<% end %>

