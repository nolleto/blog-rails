<h2>New Post</h2>

<%= form_for :post, url: posts_path do |f| %>
  <div class='form-group'>
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class='form-group'>
    <%= f.submit 'Save Post', class: 'btn btn-primary' %>
  </div>
<% end %>
